body
	background #fafafa
header
	position relative
	width 16rem
	height 2.25rem
	line-height 2.25rem
	background rgb(250,250,250) url(../../image/headerbg_v2.png) 6.95rem top no-repeat
	background-size 7.05rem 2.25rem
	padding 0.375rem 0.75rem 0.375rem .5rem 
	border-bottom .1rem solid #317ecb
	img
		width 6rem
		height 1.5rem
	i
		position absolute
		right 0.75rem
		top 1.1rem
		width 1.1rem
		height 0.15rem
		background #4998e7
		display block
		&:before
			width 1.1rem
			height 0.15rem
			background #4998e7
			display block
			content ""
			margin-top -0.3rem
		&:after
			width 1.1rem
			height 0.15rem
			background #4998e7
			display block
			content ""
			margin-top 0.45rem
.lib
	// display none
	height 5rem
	width 16rem
	position relative
	padding .25rem 0
	ul
		display box
		width 16rem
		height 4.5rem
		li
			box-flex 1
			float left
			width 3.2rem
			height 1.5rem
			line-height 1.5rem
			text-align center
			
.blue
	background #4998e7
	font-size .8rem
	color white
.gray
	background #49535d
	font-size .7rem
	color #95a0ac
.nav
	padding .25rem 0
	height 	2rem
	background #3e86ce
	width 16rem
	ul
		height 1.5rem
		line-height 1.5rem
		li
			height 1.5rem
			width 3.2rem
			text-align center
			color white
			font-size .8rem
			float left
			&.active
				background #226fbb
.div1
	position relative
	width 16rem
	height 8.25rem
	background red
	img
		width 16rem
		height 8.25rem
	h1
		position absolute
		bottom 0
		padding 0 0 0 0.6rem
		width 16rem
		height 1.6rem
		line-height 1.6rem
		font-size .8rem
		color white
		text-shadow 1px 1px 1px #000
		background -webkit-linear-gradient(top,rgba(0,0,0,0),rgba(0,0,0,.9))
.div2
	width 16rem
	padding	0.25rem 0.35rem
	.div2-top
		width 100%
		height 3rem
		border 1px solid #cddef0
		margin-bottom 0.2rem
		.div2-hd
			padding-left .4rem
			line-height 1.25rem
			background url(../../image/jpb_hd.png) no-repeat
			background-size cover
			color #006ace
			font-size .7rem
			font-weight bold
	.div2-bottom
		display block
		width 100%
		height 1.7rem
		background #EDFAFF
		color #0695d7
		border 1px solid #B5DCF2
		padding-left 0.8rem
		img
			display inline-block
			width 2.2rem
			height 1.7rem
			vertical-align middle
			margin-right .15rem
		span
			display inline-block
			line-height 1.6rem
			font-size .7rem
			font-weight bold
.content
	width 16rem
	padding 0 .4rem
	.item
		position relative
		width 100%
		padding .5rem 0
		border-bottom 1px solid #eceef0
		box-shadow 0 1px 1px #fff
		.image
			float left
			width 3.95rem
			height 2.95rem
			line-height 2.85rem
			padding .05rem
			background #e9f1f4
			border 1px solid #e0e0e0
			text-align center
			img
				width 3.4375rem
				height 2.75rem
		.desc
			float left
			h2
				padding-left 5px
				margin-bottom .25rem
				display inline-block
				width 11.25rem
				height 1.1rem
				line-height 1.1rem
				overflow hidden
				font-size .75rem
				white-space nowrap
				text-overflow ellipsis
			p
				padding-left 5px
				width 11.25rem
				font-size .6rem
				line-height .8rem
				color #878c92
			span
				position absolute
				bottom .4rem
				right 0
				.zhuan
					display inline-block
					line-height .7rem
					font-size .1rem
					background #4886da
					padding 1px 4px
					color white
				.hui
					display inline-block
					color #878c92
					font-size .1rem
					&:before
						width 10px
						height 10px
						background-position -84px 0
						margin-right 3px
						padding-left 10px
						background-size 119px 21px
						vertical-align middle
						background-image url(../../image/icon.png)
						content ""
	.getMore
		color #b4b4b4
		height 1.65rem
		line-height 1.62rem
		width 100%
		border 1px solid #efefef
		background #f6f5f5
		text-align center
		font-size .8rem
		margin-bottom .75rem
		&:after
			display inline-block
			width 21px
			height 21px
			content ""
			vertical-align middle
			background url(../../image/icon.png) no-repeat
			background-position -42px 0
			background-size 119px 21px
footer
	color #95a0ac
	overflow-X hidden
	.footer-bottom
		position relative
		background #404a54
		padding .5rem 2.25rem .6rem 0
		font-size .7rem
		.user
			padding 0 .4rem
		.lines
			margin-top .5rem
			padding 0 .4rem
		.last
			margin-top .5rem
			padding 0 .4rem
			color #707982
			white-space nowrap
			font-size .6rem
		.toTop
			position absolute
			width 2rem
			height 1.8rem
			right .6rem
			top .5rem
			background #313a43
			i
				width 24px
				height 21px
				background url(../../image/icon.png) 1rem 2rem no-repeat 
				background-size 119px 21px
				background-position -95px 0
				margin .8rem auto 0
.fixed-right
	position fixed
	right .5rem
	bottom 4rem
	img
		width 2.4rem
		height 2.8rem
.fixed-bottom
	display none 
	position fixed
	bottom 0
	width 16rem
	height 2.25rem
	background rgba(0,0,0,.6)
	padding .3rem 0 0 .75rem
	img
		float left
		width 1.45rem
		height @width
	.text
		float left
		color white
		height 1.6rem
		margin-left .5rem
		.txt1
			line-height .8rem
			font-size .75rem
		.txt2
			line-height .8rem
			font-size .6rem
	.down
		margin 0 .9rem 0 2.25rem
		float left
		width 3rem
		height 1.6rem
		a
			display block
			line-height 1.6rem
			background #4998E7
			border-radius 3px
			color white
			text-align center
			font-size .6rem
	i
		margin-left 2rem
		line-height 1.6rem
		color white
		font-size .8rem










